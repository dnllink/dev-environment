--langdef=Kotlin
--map-Kotlin=+.kt
--map-Kotlin=+.kts

--kinddef-Kotlin=c,class,classes
--kinddef-Kotlin=m,method,methods

--regex-Kotlin=/^[a-z]*[ \t]*(interface|class)[ \t]+([A-Z]+[a-zA-Z0-9_]*)[ \t]*[({]?([ :,a-zA-Z0-9]*)[)}]?/\2/c
--regex-Kotlin=/^[a-z \t]*(fun)[ \t]+([a-z]+[a-zA-Z0-9_]*)[ \t]*[(]?([ :,?a-zA-Z0-9]*)[)]?/\2/m
